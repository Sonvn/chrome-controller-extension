{
  "name": "Chrome controller extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "description" : "Description ...",
  "icons": { "16": "icons/icon_16.png", "48": "icons/icon_48.png", "128": "icons/icon_128.png" },

  "browser_action": {
    "default_icon": {
      "19": "icons/icon_19.png",
      "38": "icons/icon_38.png"
    },
    "default_title": "Chrome controller extension",
    "default_popup": "browser-action/popup.html"
  },

  "background": {
    "scripts": ["background/background.js", "controller/controller.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],

  "options_page": "option-page/option.html",

  "permissions": [
    "activeTab",
    "tabs",
    "http://*/",
    "https://*/",
    "<all_urls>",
    "storage"
  ],

  "devtools_page": "dev-tools/dev-tools.html"
}